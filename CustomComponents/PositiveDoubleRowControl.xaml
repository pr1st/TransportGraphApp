<UserControl x:Class="TransportGraphApp.CustomComponents.PositiveDoubleRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel 
        MaxHeight="25" 
        MinWidth="120" 
        Margin="5, 5, 5, 5"
        Orientation="Horizontal">
        <TextBox
            BorderThickness="1"
            MinWidth="109"
            FontSize="16"
            PreviewTextInput="NumberValidationTextBox"
            Name="TextBox"
            PreviewKeyDown="UpOrDownPressed"
            GotKeyboardFocus="ElementGotFocus"
            x:FieldModifier="public"/>
        <StackPanel 
            Orientation="Vertical">
            <Line Height="1"></Line>
            <Button BorderThickness="0" 
                    FontFamily="Marlett" 
                    FontSize="8" 
                    Content="5"
                    Focusable="False"
                    Click="ArrowUp"/>
            <Line Height="1"></Line>
            <Button BorderThickness="0" 
                    FontFamily="Marlett" 
                    FontSize="8" 
                    Content="6"
                    Focusable="False"
                    Click="ArrowDown"/>
        </StackPanel>
    </StackPanel>
</UserControl>
