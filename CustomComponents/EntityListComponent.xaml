<UserControl x:Class="TransportGraphApp.CustomComponents.EntityListComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <WrapPanel>
        <StackPanel>
            <Label Name="Title" x:FieldModifier="private" HorizontalAlignment="Left"/>
            <ListView Height="400" Width="300" Name="List" x:FieldModifier="public" HorizontalAlignment="Stretch">
                <ListView.View>
                    <GridView/>
                </ListView.View>
            </ListView>
        </StackPanel>
        <StackPanel Margin="3,0,0,0" Name="ButtonPanel" x:FieldModifier="private" />
    </WrapPanel>
</UserControl>
