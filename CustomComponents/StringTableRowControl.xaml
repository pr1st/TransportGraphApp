<UserControl x:Class="TransportGraphApp.CustomComponents.StringTableRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <WrapPanel Width="360" Margin="5, 5, 5, 5">
        <StackPanel Width="180">
            <TextBlock Width="180" Margin="0,0,0,5"
                       TextWrapping="Wrap" FontSize="16"
                       Name="StringTitle" x:FieldModifier="private" />
            <TextBox Width="180" Height="25" Margin="0,0,0,5"  
                     FontSize="16"
                     Name="AddBox" x:FieldModifier="private"/>
            <Button HorizontalAlignment="Left" 
                    Click="AddElement" 
                    Name="AddButton" x:FieldModifier="private" />
        </StackPanel>
        <Button Width="25" VerticalAlignment="Top"
                Click="RemoveElements"
                Name="RemoveButton" x:FieldModifier="private" />
        <ListView Width="145" MaxHeight="170"
            Name="StringList" x:FieldModifier="private" /> 
    </WrapPanel>
</UserControl>
