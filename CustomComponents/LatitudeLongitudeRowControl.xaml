<UserControl x:Class="TransportGraphApp.CustomComponents.LatitudeLongitudeRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Width="350" Margin="5, 5, 5, 5">
        <WrapPanel Height="25" Margin="0, 0, 0, 5">
            <TextBlock Width="160" FontSize="16">Широта</TextBlock>
            <TextBox Width="180" FontSize="16" 
                     TextChanged="NumberValidation" PreviewTextInput="NumberValidationTextBox" 
                     GotKeyboardFocus="ElementGotFocus"
                     Name="LatitudeBox"  x:FieldModifier="private"/>
        </WrapPanel>
        <WrapPanel Height="25">
            <TextBlock Width="160" FontSize="16">Долгота</TextBlock>
            <TextBox Width="180" FontSize="16"
                     TextChanged="NumberValidation" PreviewTextInput="NumberValidationTextBox" 
                     GotKeyboardFocus="ElementGotFocus"
                     Name="LongitudeBox"  x:FieldModifier="private"/>
        </WrapPanel>
    </StackPanel>
</UserControl>
