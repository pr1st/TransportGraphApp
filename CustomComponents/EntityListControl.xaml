<UserControl x:Class="TransportGraphApp.CustomComponents.EntityListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <WrapPanel Margin="5,5,5,5">
        <StackPanel Margin="0,0,5,0">
            <Label HorizontalAlignment="Left" Margin="0,0,0,5"
                   Name="Title"/>
            <ListView Height="440" Width="330" HorizontalAlignment="Stretch" 
                      Name="List">
                <ListView.View>
                    <GridView/>
                </ListView.View>
            </ListView>
        </StackPanel>
        <Button Width="20" Height="20" VerticalAlignment="Top" 
            Name="AddButton"/>
    </WrapPanel>
</UserControl>
