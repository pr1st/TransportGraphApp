<UserControl x:Class="TransportGraphApp.CustomComponents.StringRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <WrapPanel
        MaxHeight="25" 
        Margin="5, 5, 5, 5">
        <TextBlock MinWidth="160"
                   FontSize="16"
                   Name="StringTitle" 
                   x:FieldModifier="private" />
        <TextBox BorderThickness="1"
            MinWidth="180"
            FontSize="16"
            Name="TextBox"
            GotKeyboardFocus="ElementGotFocus"
            x:FieldModifier="private"/>
    </WrapPanel>
</UserControl>
