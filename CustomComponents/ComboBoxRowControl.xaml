<UserControl x:Class="TransportGraphApp.CustomComponents.ComboBoxRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Width="360" Margin="5,5,5,5">
        <WrapPanel Width="360" Margin="0, 0, 0, 5">
            <TextBlock Width="165" Margin="0,0,5,0" 
                       TextWrapping="Wrap" FontSize="16" 
                       Name="StringTitle"/>
            <ComboBox Width="180" Height="25"
                      FontSize="16" VerticalAlignment="Top"
                      Name="ValueBox"/>
        </WrapPanel>
        <TextBlock Width="360"
                   TextWrapping="Wrap" FontSize="16" 
                   Name="InfoBox">
        </TextBlock>
    </StackPanel>
</UserControl>
