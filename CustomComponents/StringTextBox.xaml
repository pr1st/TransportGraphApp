<UserControl x:Class="TransportGraphApp.CustomComponents.StringTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel
        MaxHeight="25" 
        MinWidth="120" 
        Margin="5, 5, 5, 5"
        Orientation="Horizontal">
        <TextBox
            BorderThickness="1"
            MinWidth="120"
            FontSize="16"
            Name="TextBox"
            GotKeyboardFocus="ElementGotFocus"
            x:FieldModifier="public"/>
    </StackPanel>
</UserControl>