<UserControl x:Class="TransportGraphApp.CustomComponents.TableRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <WrapPanel Width="360" Margin="5, 5, 5, 5">
        <TextBlock Width="120"
                   TextWrapping="Wrap" FontSize="16"
                   Name="TableTitle" />
        <StackPanel Width="24">
            <Button VerticalAlignment="Top"
                    Name="AddButton" />
            <Button VerticalAlignment="Top"
                    Name="RemoveButton" />
        </StackPanel>
        <ListView Width="206" MaxHeight="170" MinHeight="55"
                  Name="ItemList">
            <ListView.View>
                <GridView />
            </ListView.View>
        </ListView>
    </WrapPanel>
</UserControl>