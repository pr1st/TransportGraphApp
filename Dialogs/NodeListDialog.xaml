<Window x:Class="TransportGraphApp.Dialogs.NodeListDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Node list" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="15" Orientation="Vertical">
        <ListView Height="500" MinWidth="500" Name="ListView" x:FieldModifier="private">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="X" Width="50" DisplayMemberBinding="{Binding X}" />
                    <GridViewColumn Header="Y" Width="50" DisplayMemberBinding="{Binding Y}" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Vertical">
            <WrapPanel HorizontalAlignment="Left" Margin="0,10,0,0" 
                       Name="ModifyListButtons" x:FieldModifier="private" />
            <WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button IsDefault="True" IsCancel="True" MinWidth="60" Margin="0,0,10,0">OK</Button>
            </WrapPanel>
        </StackPanel>
    </StackPanel>
</Window>
