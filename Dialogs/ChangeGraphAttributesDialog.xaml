<Window x:Class="TransportGraphApp.Dialogs.ChangeGraphAttributesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change graph attributes" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="15" Orientation="Vertical">
        <Label Name="GraphNameLabel" x:FieldModifier="private"></Label>

        <StackPanel Orientation="Vertical" Name="AttributePanel" x:FieldModifier="private"></StackPanel>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Click="OkClicked" MinWidth="60" Margin="0,0,10,0">Change</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>
