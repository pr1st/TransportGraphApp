<Window x:Class="TransportGraphApp.Dialogs.NewDataBaseFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create file"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        xmlns:cl="clr-namespace:TransportGraphApp.CustomComponents">
    <StackPanel Margin="15">
        <Label>Enter file name:</Label>
        <cl:StringTextBox x:Name="FileName" x:FieldModifier="private" Width="200"/>
        <WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Click="OkClicked" MinWidth="60" Margin="0,0,10,0">Ok</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>