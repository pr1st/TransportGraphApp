<Window x:Class="TransportGraphApp.Dialogs.TransportSystemDialogs.ListTransportSystemsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="Транспортные системы">
    <StackPanel Margin="15">
        <WrapPanel>
            <StackPanel Name="ListPanel" x:FieldModifier="private" />
            <Separator BorderBrush="Black" BorderThickness="1" Margin="2,0,2,0"/>
            <StackPanel Name="PropertiesPanel" x:FieldModifier="private" />
        </WrapPanel>
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="120" Click="SelectClick" IsDefault="True">Выбрать</Button>
            <Button Grid.Column="2" Width="60" IsCancel="True">Отмена</Button>
        </Grid>
    </StackPanel>
</Window>