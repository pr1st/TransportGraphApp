<Window x:Class="TransportGraphApp.Dialogs.SelectGraphDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select graph"  SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="15" Orientation="Horizontal">
        <StackPanel Orientation="Vertical" Margin="0,0,10,0">
            <Label>Available graphs</Label>
            <ListView Height="200" MinWidth="150" Name="ListView" x:FieldModifier="private"></ListView>
            <WrapPanel HorizontalAlignment="Left" 
                       Margin="0,5,0,0" 
                       Name="ModifyListButtons"
                       x:FieldModifier="private" />
        </StackPanel>

        <StackPanel Orientation="Vertical">
            <Label>Graph attributes</Label>
            <TabControl Width="250" Name="TabControl" x:FieldModifier="private"></TabControl>
            <WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button IsDefault="True" Click="OkClicked" MinWidth="60" Margin="0,0,10,0">Select</Button>
                <Button IsCancel="True" MinWidth="60">_Cancel</Button>
            </WrapPanel>
        </StackPanel>
    </StackPanel>
</Window>
