<Window x:Class="TransportGraphApp.Dialogs.NewGraphDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cl="clr-namespace:TransportGraphApp.CustomComponents"
        Title="New graph" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="15">

        <Label FontSize="16">Enter graph name:</Label>
        <cl:StringTextBox x:Name="GraphNameBox" x:FieldModifier="private"></cl:StringTextBox>
        <Label FontSize="16">Add attributes</Label>
        <TabControl Name="TabControl" x:FieldModifier="private"></TabControl>

        <WrapPanel HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Click="OkClicked" MinWidth="60" Margin="0,0,10,0">Create</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>
